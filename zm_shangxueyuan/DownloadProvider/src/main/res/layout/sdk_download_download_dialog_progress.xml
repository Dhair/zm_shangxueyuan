<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sdk_download_alert_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/download_dialog_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="14sp"
        android:paddingLeft="19dp"
        android:paddingTop="16dp"
        android:textColor="@color/sdk_download_white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#C2C6EB" />

    <TextView
        android:id="@+id/download_dialog_detail_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:paddingBottom="14sp"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:paddingTop="15dp"
        android:textColor="@color/sdk_download_white"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8B8EAF" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sdk_download_list_footer_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="1dip"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:paddingTop="5dip" >

        <Button
            android:id="@+id/download_dialog_negative_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/sdk_download_normal_text_color"
            android:textSize="16sp" />

        <View
            android:layout_width="1.5dp"
            android:layout_height="32dp"
            android:background="#9395bb" />

        <Button
            android:id="@+id/download_dialog_positive_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/sdk_download_normal_text_color"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>